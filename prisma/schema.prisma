generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int @id @default(autoincrement())  
  clerkId         String? @unique
  uname           String 
  email           String   
  phone           String
  birthday        String
  time            String
  location        String
  questions       String
  rtype           String
  price           String
  defaultChartId  Int?
  birthCharts     BirthChart[]
  tarotReadings   TarotReading[]
}

model BirthChart {
  id          Int      @id @default(autoincrement())
  name        String
  birthDate   DateTime
  birthTime   String
  birthPlace  String
  ascendant   String?
  midheaven   String?  // Medium Coeli (MC)
  sun         String?
  moon        String?
  mercury     String?
  venus       String?
  mars        String?
  jupiter     String?
  saturn      String?
  uranus      String?
  neptune     String?
  pluto       String?
  northnode   String?  
  southnode   String?  
  chiron      String?  
  lilith      String?  
  houses      Json?
  aspects     Json?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}

model TarotReading {
  id          Int      @id @default(autoincrement())
  name        String
  spreadType  String   // "three-card", "celtic-cross", "single-card", etc.
  cards       Json     // Array of card objects with position, name, etc.
  question    String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      Int?
}
